@model Equipe
@{
    ViewData["Title"] = "Cadastrar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Cadastrar nova Equipe</h1>

<form asp-action="Cadastrar">

    <div class="mb-3">
        <label asp-for="Nome" class="form-label"></label>
        <input asp-for="Nome" class="form-control" />
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Senha" class="form-label"></label>
        <input type="password" asp-for="Senha" class="form-control" />
        <span asp-validation-for="Senha" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Descricao" class="form-label"></label>
        <input type="text" asp-for="Descricao" class="form-control" />
        <span asp-validation-for="Descricao" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="AreaContratacao" class="form-label"></label>
        <select asp-for="AreaContratacao" class="form-control" asp-items="@Html.GetEnumSelectList<AreaContratacao>()">
            <option>Selecione</option>
        </select>
        <span asp-validation-for="AreaContratacao" class="text-danger"></span>
    </div>
    
    <input type="submit" value="Cadastrar" class="btn btn-outline-success" />

</form>

